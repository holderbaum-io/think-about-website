<%= partial 'keyvisual' %>
<main>
  <section>
    <div class="centered">
      <figure>
        <img width="130px" src="/assets/images/logo.svg" alt="Think About! Logo">
      </figure>
      <%= content 'our_conference' %>
      <a href="#newsletter" button><%= t('newsletter.anchor-link-title') %></a>
    </div>
  </section>
  <section class="events">
    <div>
      <h1>Past Events</h1>
      <div>
        <article>
          <a href="/events/2019.html">
            <figure><img src="/assets/images/events/2019.jpg"/></figure>
            <div>
              <span>May 23rd &amp; 24th in Cologne</span>
              <h1>Think About! 2019</h1>
              <p>
                At the first Think About! Conference 170 people came together to watch amazing speakers such as Linda Rising, Laura Kalbag, Aral Balkan and many many more.
              </p>
              <span>Read more</span>
            </div>
          </a>
        </article>
      </div>
    </div>
  </section>
  <section class="topics">
    <div>
      <section topic="tech">
        <figure>
          <img src="/assets/images/tech.svg">
        </figure>
        <article>
          <%= content 'topic_tech' %>
        </article>
      </section>
      <section topic="design">
        <figure>
          <img src="/assets/images/design.svg">
        </figure>
        <article>
          <%= content 'topic_design' %>
        </article>
      </section>
      <section topic="society">
        <figure>
          <img src="/assets/images/society.svg">
        </figure>
        <article>
          <%= content 'topic_society' %>
        </article>
      </section>
    </div>
  </section>
  <section>
    <%= partial 'updates' %>
  </section>
</main>
